<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FootballPlayerSimpleDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FootballPlayerSimpleDemo"
    xmlns:view="clr-namespace:FootballPlayerSimpleDemo.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate view:HomePage}"
                Route="HomePage"/>
        </Tab>
        <Tab Title="Players">
            <ShellContent
                Title="Players"
                ContentTemplate="{DataTemplate local:PlayersPage}"
                Route="PlayersPage" />        
        </Tab>
    </TabBar>
    

</Shell>
